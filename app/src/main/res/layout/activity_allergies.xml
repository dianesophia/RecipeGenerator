<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dietPreferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/skip3"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginTop="40sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableRight="?attr/homeAsUpIndicator"
            android:padding="5dp"
            android:text="Skip"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/goalQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:padding="10dp"
            android:text="Any allergies?"
            android:textColor="@color/yellowTextColor"
            android:textSize="23dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/a1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15sp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/egg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/egg"
                        android:contentDescription="Egg" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/eggtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Egg"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/allergy2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/milk"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/milk"
                        android:layout_gravity="center"
                        android:contentDescription="Milk"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/milktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Milk"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/a3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/nut"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nut"
                        android:contentDescription="Nut"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nuttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nut"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/a4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/soybean"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/soybean"
                        android:contentDescription="Soy Bean"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/soybeantext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Soy Bean"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/a5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/CrustaceanPic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shrimp"
                        android:contentDescription="Crustaceans"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Crustaceantext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seafoods"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/a6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="8dp">


                    <ImageView
                        android:id="@+id/wheat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wheat"
                        android:layout_gravity="center"
                        android:contentDescription="Wheat"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/wheattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wheat"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">







        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            app:cardBackgroundColor="@color/white"
            android:clickable="true"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            android:outlineAmbientShadowColor="@color/yellow">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_gravity="center"
                android:textColor="@color/yellowTextColor"
                android:textStyle="bold"
                android:shadowColor="@color/yellow"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/e" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/e" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/efull" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/e" />
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
